//  Used for package.jsonï¼š script: "dev": "nodemon ./src/index.ts"
{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
